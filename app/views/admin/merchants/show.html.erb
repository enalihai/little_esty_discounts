<div class="feature-box">
  <header class="header">
    <h1>Merchant Show - Admin</h1>
  </header>
  <div class="merchant-info">
    <p>Name: <%= @merchant.name %></p>
    <p>Status: <%= @merchant.status %></p>
  </div>

  <p id="update"> <%= link_to "Update Merchant Information", "/admin/merchants/#{@merchant.id}/edit" %> </p>

<% flash.each do |type, message| %>
  <p><%= message %></p>
<% end %>
</div>
