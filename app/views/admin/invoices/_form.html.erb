<div class="feature-box">
  <%= form_with url: "/admin/invoices/#{@invoice.id}", method: :patch, local: true do |f| %>
    <%= f.label "Status" %>
    <%= f.select(:status, options_for_select([['In Progress', 'in progress'], ['Completed', 'completed'], ['Cancelled', 'cancelled']], @invoice.status))  %>

    <div class="button-to">
      <%= f.submit "Update Status" %>
    </div>
  <% end %>
</div>
